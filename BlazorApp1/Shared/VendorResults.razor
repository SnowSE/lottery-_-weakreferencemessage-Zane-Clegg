@inject LotteryProgram lp

<p>
    Your licensed lottery vendor shop ("@VendorName") has the following performance:
</p>
<table class="table table-striped table-hover">
    <tr><th scope="col"># Sold</th><th scope="col">$ Sales</th><th scope="col">$ Commission</th></tr>
    <tr>
        <td>@lp.p.GetVendorNumberOfTicketsSold(VendorName).ToString("N0")</td>
        <td>@((lp.p.GetVendorNumberOfTicketsSold(VendorName) * 2).ToString("C0"))</td>
        <td>@((lp.p.GetVendorNumberOfTicketsSold(VendorName) * 2 * .05).ToString("C2"))</td>
    </tr>
</table>

<p>Your Vendor shop sold the following winning tickets:</p>
<table class="table table-striped table-hover">
    <tr><th>$ Prize</th><th>Balls</th><th>Powerball</th></tr>
    @foreach (var ticket in lp.p.GetVendorWinningTickets(VendorName))
    {
        <tr>
            <td>@ticket.winAmtDollars.ToString("C0")</td>
            <td>@ticket.FormattedBalls</td>
            <td>@ticket.powerBall.ToString("00")</td>
        </tr>
    }
</table>

@code {
    [Parameter] public string VendorName { get; set; }

}
